template(name='loom')
    .ui.attached.menu
        .item
            .ui.inline.header
                img.ui.mini.inline.image(src="https://cdn-icons-png.flaticon.com/512/2128/2128771.png")
                |loom
        .item
            .ui.icon.left.action.input
                if current_site_search
                    i.remove.large.red.link.icon.clear_search.zoomer(title='clear search')
                else
                    i.search.large.grey.link.icon.zoomer(title='search')
                input.search_site(type='text' autocomplete="off" value=current_site_search placeholder='ask loom...')
        // .item
        +model_dropdown
    .ui.padded.divided.celled.stackable.centered.grid
        .eight.wide.center.aligned.column
            // +quickchat
            each picked_tags
                .ui.label
                    i.remove.link.icon.zoomer.unpick_tag(title='clear tag')
                    |#{this}
            if currentUser
                +session_set key='view_mode' value='grid' icon='th' 
                +session_set key='view_mode' value='list' icon='list'
                +session_set key='view_mode' value='feed' icon='stream'
                +session_toggle key='view_calendar' label='calendar' icon='calendar'
                .scrolling
                    // .ui.hidden.divider
                    if session_is 'view_mode' 'list'
                        .ui.divided.selection.items 
                            each doc_results 
                                +home_list_item
                    else if session_is 'view_mode' 'grid'
                        .ui.three.stackable.cards
                            each doc_results
                                +home_card
                    else    
                        .ui.centered.one.cards
                            each doc_results
                                +home_card
            else 
                +login
        if session_get 'fullview_id'
            .scrolling.eight.wide.centered.column
                .ui.circular.basic.fluid.compact.purple.icon.button.clear_fullview 
                    i.left.chevron.icon
                .ui.hidden.divider
                with fullview_doc 
                    .ui.one.cards
                        +home_card
                    +comments
        else if session_is 'view_calendar'
            .column
                +datepicker
                // .scrolling.eight.wide.centered.column
            
    
